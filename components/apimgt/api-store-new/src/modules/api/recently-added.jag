<%
var getRecentlyAddedAPIs = function (limit) {
    var list, i, length, api, apis,
            log = new Log(),
            store = jagg.module("greg").getAPIStoreObj();

    try {
        apis = store.getRecentlyAddedAPIs(limit);
        if (log.isDebugEnabled()) {
            log.debug("getRecentlyAddedAPIs : " + stringify(apis));
        }
        list = [];
        length = apis.length;
        for (i = 0; i < length; i++) {
            api = apis[i];
            list.push({
                name:api.name,
                provider:api.provider,
                version:api.version,
                description:api.description,
                rating:api.rates,
                subscribed:api.subscribed,
                thumbURL:api.thumbnailurl,
                tier:api.tier,
                context:api.context
            });
        }
        return {
            error:false,
            apis:list
        };
    } catch (e) {
        log.error(e.message);
        return {
            error:e,
            apis:null
        };
    }
};
%>