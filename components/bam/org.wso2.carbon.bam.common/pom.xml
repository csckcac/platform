<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>bam</artifactId>
        <version>4.0.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>org.wso2.carbon.bam.common</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - BAM Common</name>
    <description>A custom wso2 products or solution</description>
    <url>http://wso2.org</url>

    <dependencies>

        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.bam.util</artifactId>
            <version>${wso2carbon.version.bam}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.registry.core</artifactId>
            <version>${wso2carbon.version.bam}</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.bam.services.stub</artifactId>
            <version>${wso2carbon.version.bam}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>
                            ${project.artifactId}
                        </Bundle-SymbolicName>
			<Private-Package>org.wso2.carbon.bam.server.dss.*
			</Private-Package>
                        <Export-Package>
                            org.wso2.carbon.bam.common.*
                        </Export-Package>
                        <Import-Package>
                            !org.wso2.carbon.bam.common.*,
                            org.wso2.carbon.bam.util.*,
                            org.apache.commons.logging.*,
                            org.wso2.carbon.bam.services.stub.bamconfigurationds.*; version="${carbon.platform.package.import.version.range}",
                            org.wso2.carbon.bam.services.stub.bamconfigurationds.types.*; version="${carbon.platform.package.import.version.range}",
                            org.wso2.carbon.bam.services.stub.bamdatacollectionds.*; version="${carbon.platform.package.import.version.range}",
                            org.wso2.carbon.bam.services.stub.bamdatacollectionds.types.*; version="${carbon.platform.package.import.version.range}",
                            org.wso2.carbon.bam.services.stub.bamsummarygenerationds.*; version="${carbon.platform.package.import.version.range}",
                            org.wso2.carbon.bam.services.stub.bamsummarygenerationds.types.*; version="${carbon.platform.package.import.version.range}",
                            *;resolution:=optional
                        </Import-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
