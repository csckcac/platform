<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>jvm-autoscaler-agent</artifactId>
        <version>4.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.wso2.carbon</groupId>
    <artifactId>org.wso2.carbon.jvm.autoscaler.agent.client</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - JVM Autoscaler Agent Client</name>
    <url>http://wso2.org</url>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>1.4.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${pom.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.wso2.carbon.autoscaler.agent.service.stub.*;
                        </Export-Package>
                        <Import-Package>
                            org.apache.commonsi,
                            org.apache.commons.logging; version=0.0.0,
                            org.wso2.carbon.utils.*,
                            org.apache.axiom.om; version="${axiom.osgi.version.range}",
                            *; resolution:=optional
                        </Import-Package>
                        <!--Fragment-Host>synapse-core</Fragment-Host-->
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.wso2.securevault</groupId>
            <artifactId>org.wso2.securevault</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>aws-java-sdk.wso2</groupId>
            <artifactId>aws.java.sdk.wso2</artifactId>
            <version>1.2.3.wso2v1</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.autoscaler.agent.service.stub</artifactId>
            <version>${wso2carbon.version}</version>
        </dependency>
    </dependencies>

</project>
