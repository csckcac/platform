<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>mashup</artifactId>
        <version>4.0.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.wso2.carbon.mashup.request-processors.doc</artifactId>
    <packaging>bundle</packaging>
    <name>WSO2 Carbon - Document Request Processor</name>

    <dependencies>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.mashup.utils</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.wsdl2form</artifactId>
        </dependency>

        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-scr-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Private-Package>
                            org.wso2.carbon.mashup.request.processors.doc.internal
                        </Private-Package>
                        <Export-Package>
                            org.wso2.carbon.mashup.request.processors.doc.*
                        </Export-Package>
                        <Import-Package>
                            !org.wso2.carbon.mashup.request.processors.doc.*,
                            org.apache.axis2.*; version="${axis2.osgi.version.range.mashup}",
                            org.apache.axiom.*; version="${axiom.osgi.version.range.mashup}",
                            org.apache.commons.logging.*;version="${commons-logging.osgi.version.mashup}",
                            org.wso2.carbon.core.*,
                            org.wso2.carbon.utils.*,
                            org.wso2.carbon.mashup.utils.*,
                            javax.servlet.*; version="${javax.servlet.version.mashup}",
                            *;resolution:=optional
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
