<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.apache.hive</groupId>
        <artifactId>hive-root</artifactId>
        <version>4.0.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.apache.hive</groupId>
    <artifactId>hive-deploy</artifactId>
    <version>0.8.1-wso2v1</version>
    <packaging>pom</packaging>
    <name>hive-root</name>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.maven.incrementalbuild</groupId>
                <artifactId>incremental-build-plugin</artifactId>
                <version>1.3</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>incremental-build</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
               <artifactId>maven-clean-plugin</artifactId>
               <version>2.4.1</version>
               <configuration>
                  <filesets>
                     <fileset>
                        <directory>../build</directory>
                        <includes>
                           <include>**/*</include>
                        </includes>
                     </fileset>
                   </filesets>
               </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${project.basedir}/../build.xml" target="package">
					<property name="build.compiler" value="extJavac"/>
					<property name="basedir" value="${project.basedir}/.."/>
				</ant>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <id>install hive-builtin jar</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.hive</groupId>
                            <artifactId>hive-builtins</artifactId>
                            <version>${hive.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/../build/builtins/hive-builtins-${hive.build.version}.jar
                            </file>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install hive-common jar</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.hive</groupId>
                            <artifactId>hive-common</artifactId>
                            <version>${hive.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/../build/common/hive-common-${hive.build.version}.jar
                            </file>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install hive-exec jar</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.hive</groupId>
                            <artifactId>hive-exec</artifactId>
                            <version>${hive.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/../build/ql/hive-exec-${hive.build.version}.jar
                            </file>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install hive-jdbc jar</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.hive</groupId>
                            <artifactId>hive-jdbc</artifactId>
                            <version>${hive.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/../build/jdbc/hive-jdbc-${hive.build.version}.jar
                            </file>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install hive-metastore jar</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.hive</groupId>
                            <artifactId>hive-metastore</artifactId>
                            <version>${hive.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/../build/metastore/hive-metastore-${hive.build.version}.jar
                            </file>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install hive-serde jar</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.hive</groupId>
                            <artifactId>hive-serde</artifactId>
                            <version>${hive.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/../build/serde/hive-serde-${hive.build.version}.jar
                            </file>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install hive-service jar</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.hive</groupId>
                            <artifactId>hive-service</artifactId>
                            <version>${hive.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/../build/service/hive-service-${hive.build.version}.jar
                            </file>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                    <execution>
                        <id>install hive-shims jar</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.hive</groupId>
                            <artifactId>hive-shims</artifactId>
                            <version>${hive.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/../build/shims/hive-shims-${hive.build.version}.jar
                            </file>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
		  <execution>
                        <id>install hive-cassandra-handler jar</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <groupId>org.apache.hive</groupId>
                            <artifactId>hive-cassandra</artifactId>
                            <version>${hive.version}</version>
                            <packaging>jar</packaging>
                            <file>${project.basedir}/../build/cassandra-handler/hive-cassandra-handler-${hive.build.version}.jar
                            </file>
                            <generatePom>true</generatePom>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <properties>
        <hive.build.version>0.8.1-wso2v1</hive.build.version>
        <hive.version>${hive.build.version}</hive.version>
    </properties>
</project>
