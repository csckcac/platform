<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">


    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>carbon-dependents</artifactId>
	<version>4.0.0-SNAPSHOT</version>
	<relativePath>../../pom.xml</relativePath>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.apache.hadoop.wso2</groupId>
    <artifactId>hadoop-core</artifactId>
    <packaging>bundle</packaging>
    <name>hadoop-core.wso2</name>
    <version>0.20.203.1.wso2v1</version>
    <description>
        This bundle will represent hadoop-core
    </description>
    <url>http://wso2.org</url>

    <dependencies>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-core</artifactId>
            <version>${hadoop-core.version}</version>
<exclusions>
        <exclusion>  <!-- declare the exclusion here -->
          <groupId>commons-httpclient</groupId>
          <artifactId>commons-httpclient</artifactId>
        </exclusion>
<exclusion>  <!-- declare the exclusion here -->
          <groupId>commons-el</groupId>
          <artifactId>commons-el</artifactId>
        </exclusion>
<exclusion>  <!-- declare the exclusion here -->
          <groupId>net.java.dev.jets3t</groupId>
          <artifactId>jets3t</artifactId>
        </exclusion>

      </exclusions>
       </dependency>
    </dependencies>
   
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>1.4.0</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${pom.artifactId}</Bundle-Name>
                        <Export-Package>
                            org.apache.hadoop.*;-split-package:=merge-first
                        </Export-Package>
                        <Import-Package>
                           org.wso2.carbon.hdfs.*,!org.apache.hadoop.*
                        </Import-Package>
			<Include-Resource>
			    @hadoop-core-0.20.203.1-wso2v1.jar!/core-default.xml,
                            @hadoop-core-0.20.203.1-wso2v1.jar!/log4j.properties,
                            @hadoop-core-0.20.203.1-wso2v1.jar!/hadoop-metrics.propertie,
                            @hadoop-core-0.20.203.1-wso2v1.jar!/log4j.properties,
                            @hadoop-core-0.20.203.1-wso2v1.jar!/hadoop-metrics.propertie,
                            @hadoop-core-0.20.203.1-wso2v1.jar!/bin.tgz,                 
                        </Include-Resource>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>


    <properties>
        <hadoop-core.version>0.20.203.1-wso2v1</hadoop-core.version>
    </properties>
</project>
