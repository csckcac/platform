<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.wso2.carbon</groupId>
        <artifactId>sample-emr</artifactId>
        <version>4.0.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <artifactId>emr-war</artifactId>
    <name>EMR sample - Web Application</name>
    <description>EMR sample - Web Application</description>
    <packaging>war</packaging>

    <dependencies>
        <dependency>
            <groupId>org.apache.axis2.wso2</groupId>
            <artifactId>axis2-client</artifactId>
            <version>1.6.1.wso2v5</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.authenticator.proxy</artifactId>
            <version>4.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core.common</artifactId>
            <version>4.0.0-SNAPSHOT</version>

        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.ui</artifactId>
            <version>4.0.0-SNAPSHOT</version>

        </dependency>
        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>org.wso2.carbon.core</artifactId>
            <version>4.0.0-SNAPSHOT</version>

        </dependency>
        <dependency>
            <groupId>org.apache.axis2.wso2</groupId>
            <artifactId>axis2</artifactId>
            <version>${orbit.version.axis2}</version>
        </dependency>

        <dependency>
            <groupId>org.wso2.carbon</groupId>
            <artifactId>sample-emr-core</artifactId>
            <version>4.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>commons-fileupload</groupId>
            <artifactId>commons-fileupload</artifactId>
        </dependency>
        <dependency>
            <groupId>taglibs</groupId>
            <artifactId>standard</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>jstl</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
        </dependency>
        <dependency>
            <groupId>org.perf4j.wso2</groupId>
            <artifactId>perf4j</artifactId>
        </dependency>
        <dependency>
            <groupId>org.cliffc.high_scale_lib.wso2</groupId>
            <artifactId>high-scale-lib</artifactId>
        </dependency>
        <dependency>
            <groupId>libthrift.wso2</groupId>
            <artifactId>libthrift</artifactId>
        </dependency>
        <dependency>
            <groupId>org.hectorclient</groupId>
            <artifactId>hector-core</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-io.wso2</groupId>
            <artifactId>commons-io</artifactId>
        </dependency>
    </dependencies>

    <build>
        <finalName>emr</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1.1</version>
                <configuration>
                    <warName>emr</warName>
                    <packagingIncludes>
                        WEB-INF/classes/**,
                        WEB-INF/*,
                        WEB-INF/lib/jstl*.jar,
                        WEB-INF/lib/standard*.jar,
                        **/lib/commons-io-2.0.0.wso2v1.jar,
                        **/lib/apache-cassandra*.jar,
                        **/lib/avro*.jar,
                        **/lib/guava*.jar,
                        **/lib/hector-core*.jar,
                        **/lib/high-scale-lib*.jar,
                        **/lib/axis2-client*.jar,
                        **/lib/libthrift*.jar,
                        **/lib/perf4j*.jar,
                        **/lib/slf4j.api*.jar,
                        **/lib/slf4j*.jar,
                        **/lib/sample-emr-core*.jar,
                        **/*.java,
		        **/css/img/*.png,
                        **/css/img/*.gif,
                        **/css/img/fancybox/*.png,
                        **/css/img/fancybox/*.gif,
                        **/css/img/rte/*.png,
                        **/css/img/rte/*.gif,
                        **/fonts/base/*.eot,
                        **/fonts/base/*.svg,
                        **/fonts/base/*.ttf,
                        **/fonts/base/*.woff,
                        **/fonts/social/*.eot,
                        **/fonts/social/*.svg,
                        **/fonts/social/*.ttf,
                        **/fonts/social/*.woff,
                        **/jsp*/**,
                        **/js/*.js,
			**/css/*.css,
                        **/tags/**,
                        **/servlets/**,
                        **/carbon/**,
                        **/*.class,
                        **/*.jsp,
                        **/*.html,
			**/*.txt
                    </packagingIncludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
